.indexItem{background: #fff;margin: 16px 32rpx 0;padding:8px 32rpx;box-sizing: border-box;width:calc(100% - 64rpx)}
.indexTitle{font-size: 32rpx;font-weight: bold;display: flex;align-items: center}
.indexTitle > text{margin-left: 5px}
.indexInfo{padding: 5px 0;color:#666;display: -webkit-box;-webkit-box-orient: vertical;
-webkit-line-clamp: 2;overflow: hidden;}
.indexKeyWords{padding: 5px 0;color: #666;border-bottom:1px dashed #dcdcdc;font-size: 24rpx;}
.indexFooter{display: flex;justify-content: space-between;align-items: center;font-size: 24rpx;color: #a0a0a0}


