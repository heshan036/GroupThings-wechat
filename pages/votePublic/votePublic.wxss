@import '../public/public';
.options{padding:0 32rpx}
.voteOption,.addOption{padding:8px 0;}
.voteOption{border-bottom:1px dashed #e5e5e5}
.voteOption text,.addOption text{width: 40rpx;height: 40rpx;color: #fff;border-radius: 20rpx;text-align: center;font-size: 48rpx;line-height:32rpx;margin-right: 8px }
.voteOption text{background: #f43824;}
.voteOption input{flex: 1;font-size: 27rpx;font-family: 'Microsoft YaHei', '微软雅黑';color: #333}
.addOption text{background: #0590ca;display: inline-block;margin-right: 8px}









