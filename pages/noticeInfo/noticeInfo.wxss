.infoWrapper{background: #fff;margin:16px 0 0}
.infoContent{padding:8px 32rpx;color: #666;}
.infoHeader{margin-bottom: 16px}
.infoHeader > image,.infoWrapper > image{width: 100%;line-height: 0}
.paramNumber{position: absolute;left: 50%;top:100%;transform: translate(-50%,0)}
.infoContent .theme{font-size: 32rpx;font-weight: bold;text-align: center;display: block;color: #333}
.infoContent .infoPic{width: 100%;margin-top: 6px}
.infoContent .infoNote{text-align: right;}
.infoContent .keyWords{color: #a0a0a0;padding: 5px 0;margin-top: 5px;border-top:1px dashed #dcdcdc}
.infoContent .address{color:#1177c9;}
.infoContent .address span{vertical-align: middle}

.viewerList{background: #fff;}
.viewerList .secName{padding-bottom:5px;border-bottom:1px solid #dcdcdc}
.viewer{display: flex;flex-direction: row;justify-content: space-between;align-items: center;padding: 10px 32rpx;flex-wrap: nowrap;color: #666;border-bottom:1px dashed #dcdcdc}
.viewerList .viewer:last-child{border-bottom:none}
.viewer image{width: 64rpx;height: 64rpx;border-radius: 50%;}

.btnGroups{display: flex;justify-content: space-between;align-items: center;padding: 16px 64rpx;}
.btnGroups button{font-size: 32rpx;background: #fff}