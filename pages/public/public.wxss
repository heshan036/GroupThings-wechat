.addItem{width:calc(100% - 64rpx);background: #fff;margin:16px 32rpx 0;display: flex;flex-direction: row;align-items: center;justify-content: space-between;box-sizing: border-box;padding:24rpx 32rpx}
.itemTxt{margin:0 32rpx;flex:1}
.itemTitle{font-size: 36rpx;color: #212121}
.itemNote{font-size: 27rpx;color: #a0a0a0}
.icon-arrow_right{color: #a0a0a0}

.addPublic{width: 100%}
.publicInput{background: #fff;margin-bottom: 16px;position: relative}
.themeInput{height: 48px;padding: 0 32rpx;font-size: 36rpx;border-bottom: 1px solid #dcdcdc;font-family: 'Microsoft YaHei', '微软雅黑';width: 100%;}
.descInput{font-size: 30rpx;padding: 8px 32rpx;height: 128px;width: 100%;border-bottom: 1px solid #dcdcdc;color: #333}
.descWords{position: absolute;bottom:5px;right: 5px;color:#a0a0a0}
.publicSet{background: #fff}
.publicSet-item{padding:10px 32rpx;border-bottom:1px dashed #dcdcdc;display: flex;flex-direction: row;align-items: center;justify-content: space-between}
.publicSet-item > input{flex: 1}
.voteType label{margin-left: 10px;color: #333}
.publicDate{width: 100%;box-sizing: border-box}
.publicDate text{flex: 1;}
.publicDate text:last-child{text-align: right}
.publicSet .publicSet-item:last-child{border-bottom:none}
.publicUpload{display: flex;flex-direction: row;align-items: center;margin:0 32rpx 16px;width: calc(100% - 64rpx)}
.publicUpload > view{width:154rpx;height: 154rpx;}
.addUpload{border:1px solid #dcdcdc;box-sizing: border-box;text-align: center;background: #fff;color:#a0a0a0;position: relative;}
.addUpload > text{display: block;width: 100%;line-height: 1.4}
.uploadImg{margin-right: 32rpx;position: relative}
.publicUpload image{width: 100%;height: 100%}
.delUploadImg{position: absolute;top: -5px;right:-5px;}
.templatePic{width: 96rpx;height: 64rpx;vertical-align: middle}

.submitBtn{margin: 30px 32rpx 0}
